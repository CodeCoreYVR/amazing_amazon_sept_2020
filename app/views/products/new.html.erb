<h1>New Product Page</h1>

<% if @product.errors.any? %>
  <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%# the local: true flag is used to prevent an AJAX request when the form is submmited %>
<%# AJAX requests are HTTP requests using Javascript. They behave a little differently so we don't want to use it%>
<%= form_with model: @product, local: true do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div>
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>
  <%= f.submit %>
<% end %>
